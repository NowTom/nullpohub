%h1 Listing events

%table
  %tr
    %th User
    %th Name
    %th Start at
    %th End at
    %th Max user count
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.user
      %td= event.name
      %td= event.start_at
      %td= event.end_at
      %td= event.max_user_count
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
